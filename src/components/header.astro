---
import Logo from './logo.astro'

const response = await fetch('https://kings-league-api.daveeb.workers.dev/teams')
const teams = await response.json()
---

<header class='w-screen bg-gradient-to-b from-[#ff6900] via-[#ff6900] to-[#e66000] p-8 gap-x-8'>
  <div class='flex flex-col h-full gap-4 w-full'>
    <nav>
      <ul class='flex justify-center items-center gap-x-4 [&>li>a:hover]:scale-150'>
        {
          teams.map(({ id, image, name }, i) => (
            <>
              {i === 6 ? <Logo /> : ''}
              <li>
                <a class='group transition block' href={`/team/${id}`} title={name}>
                  <img
                    class='group-hover:drop-shadow-[0px_0px_8px_#fff] drop-shadow-[0px_0px_4px_#fff] w-12 h-12'
                    src={image}
                    alt={`Escudo del equipo ${name}`}
                  />
                </a>
              </li>
            </>
          ))
        }
      </ul>
    </nav>

    <nav>
      <ul
        class='flex justify-center text-white gap-x-4 font-semibold text-md [&>li>a]:opacity-80 [&>li>a:hover]:opacity-100 [&>li>a:hover]:underline'
      >
        <li>
          <a href='/equipos'>Equipos</a>
        </li>
        <li>
          <a href='/calendario'>Calendario</a>
        </li>
        <li>
          <a href='/estadisticas'>Estad√≠sticas</a>
        </li>
        <li>
          <a href='/contacto'>Contacto</a>
        </li>
        <li>
          <a href='/reglamento'>Reglamento</a>
        </li>
      </ul>
    </nav>
  </div>
</header>
