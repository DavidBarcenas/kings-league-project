---
import Container from './container.astro'
---

<section class='text-sm text-white p-8 bg-black'>
  <Container>
    <div class='flex justify-between flex-wrap gap-10'>
      <div>
        <div class='border-b border-[#F8AF3F] mb-10'>
          <span class='font-black'>Principal</span> partner
        </div>
        <img
          src='../../assets/static/logos/sponsors/logo-infojobs.svg'
          alt='Logo Principal Sponsor'
        />
      </div>
      <div>
        <div class='border-b border-[#F8AF3F] mb-10'>
          <span class='font-black'>Stadium</span> partner
        </div>
        <img
          src='../../assets/static/logos/sponsors/stadium-partner.svg'
          alt='Logo Stadium Sponsor'
        />
      </div>
      <div class='col-span-3'>
        <div class='border-b border-[#F8AF3F] mb-10'>
          <span class='font-black'>Main</span> partner
        </div>
        <div class='grid grid-cols-8 gap-5 items-center'>
          <img
            src='../../assets/static/logos/sponsors/logo-grefusa.svg'
            alt='Logo Grefusa Sponsor'
          />
          <img
            src='../../assets/static/logos/sponsors/logo-spotify.svg'
            alt='Logo Spotify Sponsor'
          />
          <img src='../../assets/static/logos/sponsors/logo-simyo.svg' alt='Logo Smyo Sponsor' />
          <img src='../../assets/static/logos/sponsors/logo-adidas.svg' alt='Logo Adidas Sponsor' />
          <img src='../../assets/static/logos/sponsors/logo-mahou.svg' alt='Logo Mahau Sponsor' />
          <img src='../../assets/static/logos/sponsors/logo-mi.svg' alt='Logo MI Sponsor' />
          <img
            src='../../assets/static/logos/sponsors/logo-shukran.png'
            alt='Logo Shukran Sponsor'
          />
          <img src='../../assets/static/logos/sponsors/logo-imagin.svg' alt='Logo Imagin Sponsor' />
          <img src='../../assets/static/logos/sponsors/logo-iqoption.svg' alt='Logo IQ Sponsor' />
        </div>
      </div>
      <div>
        <div class='border-b border-[#F8AF3F] mb-10'>
          <span class='font-black'>Hosting</span> partner
        </div>
        <img
          src='../../assets/static/logos/sponsors/hosting-partner.svg'
          alt='Logo Stadium Sponsor'
        />
      </div>
    </div>
  </Container>
</section>
