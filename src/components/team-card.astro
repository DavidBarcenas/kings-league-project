---
import { getAllTeams } from '@services/teams'

const teams = await getAllTeams()
---

<section class='grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8'>
  {
    teams.map((team) => {
      const { id, name, imageWhite, color } = team
      return (
        <article
          class='rounded aspect-video bg-gradient-to-tr from-gray-600 to-gray-900 overflow-hidden'
          style={`--tw-gradient-from: ${color}`}
        >
          <a
            class='flex h-full items-center relative gap-x-4 p-4 group transition-all hover:scale-110'
            href={`/team/${id}`}
            title={`Ver equipo ${name}`}
          >
            <img class='w-28 h-28 z-10' src={imageWhite} alt='' />
            <h3 class='z-10 font-title text-white text-xl xl:text-2xl'>{name}</h3>
            <div
              class='absolute bg-center bg-[size:115%] z-0 inset-0 opacity-10 group-hover:bg-[size:150%] transition-all duration-500'
              style={`background-image:url('${imageWhite}')`}
            />
          </a>
        </article>
      )
    })
  }
</section>
